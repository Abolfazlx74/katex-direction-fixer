{
  "manifest_version": 3,
  "name": "KaTeX Direction Fixer",
  "version": "1.0",
  "description": "Fixes direction of KaTeX display blocks to LTR",
  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://chatgpt.com/*",
        "*://chat.deepseek.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
